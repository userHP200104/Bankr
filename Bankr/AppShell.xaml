<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bankr.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bankr"
    Shell.FlyoutBehavior="Locked"
    FlyoutWidth="150"
    FlyoutBackgroundColor="{x:StaticResource BankrBlack}"
    Shell.NavBarIsVisible="False"
    >

    <FlyoutItem Title="Accounts" >

        <ShellContent
                
                ContentTemplate="{DataTemplate local:Views.Accounts}"
                Route="ProfilePage" 
                
            />
    </FlyoutItem>
    <FlyoutItem Title="Staff"
                >

        <ShellContent
            ContentTemplate="{DataTemplate local:Views.Staff}"
            Route="Staff" 
        />

    </FlyoutItem>

    <ShellContent
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate local:Views.SingleAccount}"
        Route="Account"></ShellContent>
    <ShellContent
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate local:Views.AddPersonView}"
        Route="AddPerson" />

</Shell>


