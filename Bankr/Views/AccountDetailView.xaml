                    <Label HorizontalTextAlignment="End" HorizontalOptions="End" x:Name="AccountNumber" TextColor="{x:StaticResource BankrWhite}" Opacity="0.7" FontSize="Micro"></Label>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </HorizontalStackLayout>

