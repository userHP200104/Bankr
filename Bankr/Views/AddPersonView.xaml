<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bankr.Views.AddPersonView"
             Title="AddPersonView">
    <ContentPage.Content>
    <VerticalStackLayout>
        <Label 
            Text="Name" />
            <Entry x:Name="entryname" x:DataType="x:String"  />

        <Label 
            Text="Surname" />
            <Entry x:Name="entrysurname" x:DataType="x:String"  />

        <Label 
            Text="Role" />
            <Entry x:Name="entryrole" x:DataType="x:String"  />

        <Button Clicked="OnSaveClicked" Text="Save"/>

    </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>